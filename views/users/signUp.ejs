      <body style="overflow-x: hidden;" >
         <div style="height: 35px; width: 100%; background-color: rgb(0, 0, 0); padding-top: 5px;" class="text-white text-center glowing-text">
           <strong>S &amp; J Mart</strong> - The things you have been Searching for....
         </div>
         
         <style>
         .glowing-text {
       position: relative;
     }
     
     .glowing-text::before {
       content: "";
       position: absolute;
       top: 0;
       left: -100%;
       width: 100%;
       height: 100%;
       background: linear-gradient(to right, transparent, #fd43439e, transparent);
       animation: glowing 5s linear infinite;
     }
     
     @keyframes glowing {
       0% {
         left: -100%;
       }
       100% {
         left: 100%;
       }
     }
     </style>
  <link rel="stylesheet" href="css/register.css">
</section>
<section class="vh-40 form-container">
  <div class="container py-2 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <h3 class="text-center text-dark mb-5">User Registration</h3>

            <% if(typeof message !=='undefined' ) { %>
              <p class="fs-4 text-success">
                <span style="color: rgb(230, 8, 8);">
                  <%=message %>
                </span>
              </p>
              <% } %>

                <form action="/signUp" method="post" onsubmit="return validate()">
                  <div class="form-outline mb-4 ">

                    <input type="text" id="name" name="name" class="form-control form-control-md" placeholder="Name"
                      onchange="nameValidate()" />
                    <span id="Name"></span>
                  </div>

                  <!-- Email input -->
                  <div class="form-outline mb-4">

                    <input type="email" id="email" name="email" class="form-control form-control-md"
                      placeholder="Email" onchange="emailValidate()" />
                    <span id="email"></span>
                  </div>

                  <div class="form-outline mb-4">

                    <input type="tel" id="mobile" name="mno" class="form-control form-control-md"
                      placeholder="Mobile No" onchange="numberValidate()" />
                    <span id="Number"></span>
                  </div>

                  <!-- Password input -->
                  <div class="form-outline mb-4">

                    <input type="password" name="password" id="password" placeholder="Password"
                      class="form-control form-control-md" onchange="passwordValidate()" />
                    <span id="Password"></span>
                  </div>

                  <div class="form-outline mb-4">

                    <input for="confirmPassword" type="password" name="confirmPassword" id="confirmPassword" placeholder="confirm-Password"
                      class="form-control form-control-md" onchange="passwordValidate2()" />
                    <span id="confirmPassword"></span>
                  </div>
                  <!-- 
                <div
                  class="d-flex justify-content-around align-items-center mb-4"
                ></div> -->

                  <!-- Submit button -->
                  <div style="display: flex; justify-content: space-around;">
                    <button class=" btn btn-block back_but" style="background-color:rgb(45, 45, 45);"><a href="/home"
                        class="text-white text-decoration-none"> Back</a></button>

                    <button type="submit" class="text-white btn btn-block reg_but" style="background-color:rgb(57, 57, 57);"
                      value="Register"
                      onclick="nameValidate() , emailValidate(), numberValidate(), passwordValidate(), passwordValidate2()">
                      Register
                    </button>
                  </div>
                  <!-- <div class="divider d-flex align-items-center my-4">
                  <p class="text-center fw-bold mx-3 mb-0 text-muted"></p>
                </div> -->
                </form>

          </div>
        </div>
      </div>
    </div>
